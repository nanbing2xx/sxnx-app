<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>跳转到手机银行</title>
    <script type="text/javascript">
        function redirectToApp() {
            var isWeChat = /MicroMessenger/i.test(navigator.userAgent);  // 检查是否在微信中

            if (isWeChat) {
                // 微信浏览器中跳转到备用网页（如手机银行的网页版）
                window.location.href = "https://www.96262.com";
            } else {
                // 非微信浏览器中跳转到手机银行的 URL Scheme
                window.location.href = "sxxhbank://mbank/startApp?menuid=0906";
                
                // 设置一个超时跳转，防止没有安装 APP 时
                setTimeout(function() {
                    window.location.href = "https://www.96262.com"; // 备用网页
                }, 2000);
            }
        }
    </script>
</head>
<body>
    <h1>点击进入手机银行</h1>
    <button onclick="redirectToApp()">跳转到手机银行</button>
</body>
</html>
